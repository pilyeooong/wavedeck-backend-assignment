{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "types": [
      "node",
    ],
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
